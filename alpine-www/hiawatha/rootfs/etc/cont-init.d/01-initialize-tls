#!/bin/execlineb -P

foreground {
 if -t { s6-test ! -d /etc/hiawatha/tls }
 if { s6-echo "[i] Create tls folder" }
 if { s6-mkdir /etc/hiawatha/tls }
}

if -t { s6-test ! -f /etc/hiawatha/tls/hiawatha.pem }
if { s6-echo "[i] Add server certificate" }
if { cp /etc/hiawatha/hiawatha.pem /etc/hiawatha/tls/hiawatha.pem }
if { s6-envuidgid hiawatha s6-chown -U -- /etc/hiawatha/tls/hiawatha.pem }
