#!/usr/bin/execlineb -P

if { s6-mkdir /var/log/hiawatha/system-logs }
if { s6-envuidgid nobody s6-chown -U -- /var/log/hiawatha/system-logs }
if { s6-mkdir /var/log/hiawatha/garbage-logs }
if { s6-envuidgid nobody s6-chown -U -- /var/log/hiawatha/garbage-logs }
if { s6-mkdir /var/log/hiawatha/access-logs }
if { s6-envuidgid nobody s6-chown -U -- /var/log/hiawatha/access-logs }
if { s6-mkdir /var/log/hiawatha/error-logs }
if { s6-envuidgid nobody s6-chown -U -- /var/log/hiawatha/error-logs }
if { logutil-newfifo -o hiawatha /var/run/s6/hiawatha-system-log-fifo }
if { logutil-newfifo -o hiawatha /var/run/s6/hiawatha-garbage-log-fifo }
if { logutil-newfifo -o hiawatha /var/run/s6/hiawatha-error-log-fifo }
if { logutil-newfifo -o hiawatha /var/run/s6/hiawatha-access-log-fifo }
