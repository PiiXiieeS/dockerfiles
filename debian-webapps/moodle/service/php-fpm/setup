set -e

if [ -f /_firstrun ]; then

  if [ ! -d "/usr/share/webapps" ]; then mkdir /usr/share/webapps ;fi
  chown -R www-data:www-data /usr/share/webapps
  mv /fpm.conf /etc/nginx/fpm.conf
  chown -R www-data:www-data /etc/nginx/fpm.conf
  sed -i -e '15,20d' /etc/service/nginx/setup
  rm /_firstrun

fi

if [ ! -d /tmp ]; then
        mkdir  /tmp
fi
chmod 777 /tmp
