set -e

echo "PidFile /var/run/apache2.pid" >> /etc/apache2/httpd.conf

MAHARA_WWWROOT=${MAHARA_WWWROOT:-/mahara/}
MAHARA_EMAIL=${MAHARA_EMAIL:-contact@domain.org}
MAHARA_DB=${MAHARA_DB:-mahara}
MAHARA_PASS=${MAHARA_PASS:-$(pwgen -s -1 16)}
MAHARA_SALD=${MAHARA_SALD:-$(pwgen -s -1 16)}
MAHARA_ADMPASS=${MAHARA_ADMPASS:-mahara}
DBHOST=${DBHOST:-db}
DBADMIN=${DBADMIN:-$DB_ENV_DBUSER}
DBPASS=${DBPASS:-$DB_ENV_DBPASS}
INSTALL=${INSTALL:-normal}

pre_start_action() {

if [ ! -f /var/www/localhost/htdocs/mahara/config.php ]; then
  sed -i 's#^DocumentRoot ".*#DocumentRoot "/var/www/localhost/htdocs"#g' /etc/apache2/httpd.conf
  sed -i 's#AllowOverride none#AllowOverride All#' /etc/apache2/httpd.conf
  cp -a /var/www/localhost/htdocs/mahara/config-dist.php /var/www/localhost/htdocs/mahara/config.php
  sed -i "s|dbtype   = 'postgres'|dbtype   = 'mysql'|g" /var/www/localhost/htdocs/mahara/config.php
  sed -i "s|dbname   = ''|dbname   = '$MAHARA_DB'|g" /var/www/localhost/htdocs/mahara/config.php
  sed -i "s|dbhost   = 'localhost'|dbhost   = '$DBHOST'|g" /var/www/localhost/htdocs/mahara/config.php
  sed -i 's|\/\/ \$cfg->wwwroot|\$cfg->wwwroot|g' /var/www/localhost/htdocs/mahara/config.php
  sed -i "s|wwwroot = 'https:\/\/myhost.com\/mahara\/'|wwwroot = '$MAHARA_WWWROOT'|g" /var/www/localhost/htdocs/mahara/config.php
  sed -i "s|dataroot = '\/path\/to\/uploaddir'|dataroot = '\/var\/maharadata'|g" /var/www/localhost/htdocs/mahara/config.php
  sed -i 's|\/\/ \$cfg->passwordsaltmain|\$cfg->passwordsaltmain|g' /var/www/localhost/htdocs/mahara/config.php
  sed -i "s|passwordsaltmain = 'some long random string here with lots of characters'|passwordsaltmain = '$MAHARA_SALD'|g" /var/www/localhost/htdocs/mahara/config.php
  sed -i "s|emailcontact = ''|emailcontact = '$MAHARA_EMAIL'|g" /var/www/localhost/htdocs/mahara/config.php
  sed -i "s#\/\/ closing php tag intentionally omitted to prevent whitespace issues#\$cfg->cleanurls = true;\n\$cfg->cleanurlinvalidcharacters = '/[^a-zA-Z0-9]+/';\n\$cfg->cleanurlvalidate = '/^[a-z0-9-]*\$/';\n\$cfg->cleanurlusereditable = true;\n\n\$cfg->log_dbg_targets     = LOG_TARGET_SCREEN | LOG_TARGET_ERRORLOG;\n\$cfg->log_info_targets    = LOG_TARGET_SCREEN | LOG_TARGET_ERRORLOG;\n\$cfg->log_warn_targets    = LOG_TARGET_SCREEN | LOG_TARGET_ERRORLOG;\n\$cfg->log_environ_targets = LOG_TARGET_SCREEN | LOG_TARGET_ERRORLOG;\n\n\/\/ closing php tag intentionally omitted to prevent whitespace issues#g" /var/www/localhost/htdocs/mahara/config.php
  chown apache:apache /var/www/localhost/htdocs/mahara/config.php
fi

## Clean URL
if [ -f /etc/apache2/httpd.conf ]; then
  sed -i "s*</VirtualHost>*\n                <IfModule mod_rewrite.c>\n                        RewriteEngine on\n                        RewriteRule ^/user/([a-z0-9-]+)/?\$ /user/view.php?profile=\$1\&%{QUERY_STRING}\n                        RewriteRule ^/user/([a-z0-9-]+)/([a-z0-9-]+)/?\$ /view/view.php?profile=\$1\&page=\$2&%{QUERY_STRING}\n                        RewriteRule ^/group/([a-z0-9-]+)/?\$ /group/view.php?homepage=\$1\&%{QUERY_STRING}\n                        RewriteRule ^/group/([a-z0-9-]+)/([a-z0-9-]+)/?\$ /view/view.php?homepage=\$1\&page=\$2\&%{QUERY_STRING}\n                </IfModule>\n</VirtualHost>*g" /etc/apache2/httpd.conf
  echo " " && echo "--- " && echo " "
fi

## Language pack
# German
cd /tmp/
if curl --output /dev/null --silent --head --fail "http://langpacks.mahara.org/de-MAHARA_VERSION_STABLE.tar.gz"; then
  wget http://langpacks.mahara.org/de-MAHARA_VERSION_STABLE.tar.gz
else
 wget http://langpacks.mahara.org/de-master.tar.gz
fi

if [ ! -d /var/maharadata/langpacks  ]; then
  mkdir /var/maharadata/langpacks
fi
tar -xvzf de-* -C /var/maharadata/langpacks/
chown -R apache:apache /var/maharadata/langpacks/de.utf8
rm -r /tmp/de*
echo " " && echo "---" && echo " "

}

post_start_action() {

  RESULT=`mysql -u $DBADMIN --password=$DBPASS -h $DBHOST --skip-column-names -e "SHOW DATABASES LIKE '$MAHARA_DB'"`
  if [ "$RESULT" == "$MAHARA_DB" ]; then
    echo "DB $MAHARA_DB exist"
    echo "So I expect a working config.php under /var/www/localhost/htdocs/mahara"
  else
	if [ "$INSTALL" == "silent" ]; then
    	  echo "Create user and database"
    	  mysql -u $DBADMIN --password=$DBPASS -h $DBHOST <<-EOF
    	  CREATE DATABASE IF NOT EXISTS $MAHARA_DB CHARACTER SET utf8;
    	  GRANT ALL PRIVILEGES ON $MAHARA_DB.* TO '$MAHARA_DB'@'%' IDENTIFIED BY '$MAHARA_PASS';
    	  FLUSH PRIVILEGES;
    	  QUIT
EOF
    	  sed -i "s|dbuser   = ''|dbuser   = '$DBADMIN'|g" /var/www/localhost/htdocs/mahara/config.php
    	  sed -i "s|dbpass   = ''|dbpass   = '$DBPASS'|g" /var/www/localhost/htdocs/mahara/config.php
    	  echo -e "\n---\nInstalling Mahara. Stay tuned!\n"
    	  php /var/www/localhost/htdocs/mahara/admin/cli/install.php --verbose --adminpassword='$MAHARA_ADMPASS' --adminemail=$MAHARA_EMAIL
	  mysql -u $DBADMIN --password=$DBPASS -h $DBHOST <<-EOF
	  USE $MAHARA_DB;
	  UPDATE usr SET password = '$MAHARA_ADMPASS', salt = NULL WHERE username = 'admin';
	  QUIT
EOF
    	  echo -e "\nInstalled with \nadminpassword = $MAHARA_ADMPASS \nadminemail = $MAHARA_EMAIL"
    	  sed -i "s|dbuser   = '$DBADMIN'|dbuser   = '$MAHARA_DB'|g" /var/www/localhost/htdocs/mahara/config.php
    	  sed -i "s|dbpass   = '$DBPASS'|dbpass   = '$MAHARA_PASS'|g" /var/www/localhost/htdocs/mahara/config.php
	  echo -e "\nDB = $MAHARA_DB \nDB User = $MAHARA_DB \nDB PASS = $MAHARA_PASS"
	fi
    chown -R apache:apache /var/maharadata
    sed -i "s|dbuser   = ''|dbuser   = '$MAHARA_DB'|g" /var/www/localhost/htdocs/mahara/config.php
    sed -i "s|dbpass   = ''|dbpass   = '$MAHARA_PASS'|g" /var/www/localhost/htdocs/mahara/config.php
  fi
  rm /firstrun

  echo " "
  echo "---"
  echo " "
}

if [ -f /firstrun ]; then

  pre_start_action
  post_start_action

fi
